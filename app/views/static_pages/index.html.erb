<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <div class="row justify-content-center" id="tasks"></div>
    </div>
    <form class="col-10" id="addtask">
      <input type="text" placeholder="New Task" id="add_task_input" required>
      <button class="btn btn-sm btn-info ml-3">Create</button>
    </form>
    <div class="col-8 d-flex justify-content-center py-5" id="toggle">
        <button class="btn btn-sm btn-danger ml-3" id="toggleAll">All</button>
         <button class="btn btn-sm btn-danger ml-3" id="toggleComplete">Complete</button>
        <button class="btn btn-sm btn-danger ml-3" id="toggleActive">Active</button>
    </div>
  </div>
</div>
